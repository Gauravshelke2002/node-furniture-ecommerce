

<%-include("navbar.ejs")%>

<form action="/admin/save_blog" method="post" enctype="multipart/form-data">
    <div class="container bg-white p-4">
        <div class="row">
            <div class="col-md-12">
                <h3>Blog</h3>
            </div>
            <div class="col-md-12 mt-3">
                Blog Image
                <input type="file" name="blog_image" class="form-control">
            </div>
            <div class="col-md-12 mt-3">
                Blog Title
                <input type="text" name="blog_title" class="form-control">
            </div>
            <div class="col-md-12 mt-3">
                Blog Details
                <textarea name="blog_details" class="form-control"></textarea>
            </div>
            <div class="col-md-3 mt-3">
                Blog Post Date
                <input type="date" name="blog_post_date" class="form-control">
            </div>
            <div class="col-md-3 mt-3">
                Blog Post Time
                <input type="time" name="blog_post_time" class="form-control">
            </div>
            <div class="col-md-3 mt-3">
                Blog Post By
                <input type="text" name="blog_post_by" class="form-control">
            </div>
            <div class="col-md-3 mt-3">
                Blog Post By Position
                <input type="text" name="blog_post_by_position" class="form-control">
            </div>
            <div class="col-md-12 mt-3 text-center ">
                <button class="btn btn-primary">Save Blog</button>
            </div>
        </div>
    </div>
</form>


<div class="container-fluid mt-5 ">
    <div class="row">
        <div class="col-md-12 mt-5 ">
            <h3>Blogs List</h3>
            <table class="table table-bordered  table-striped mt-4 " style="width: 90%;">
            <tr>
                <th>ACTION</th>
                <th>SN</th>
                <TH>Blog image</TH>
                <th>Blog title</th>
                <th>Blog Details</th>
                <th>Blog post date</th>
                <th>Blog post time</th>
                <th>Blog post by</th>
                <th>Blog post by_position</th>




            </tr>
            <%
            for(i=0;i<blogs.length;i++)
            {
                %>
                 <tr>
                    <td>

                        <a href="/admin/edit_blog/<%=blogs[i].blog_id%>">
                            <button class="btn btn-primary p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-pencil"></i>
                            </button>
                        </a>
                        <a href="/admin/delete_blog/<%=blogs[i].blog_id%>" onclick="return confirm('Are You Sure...')">
                            <button class="btn btn-warning p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-trash"></i>
                            </button>
                        </a>
                    </td>
                    <td><%=i+1%></td>
                    <td>
                        <img src="/uploads/<%=blogs[i].blog_image%>" width="100%" height="70px" >
                       
                        </td>
                    <td><%=blogs[i].blog_title%></td>
                    <td><%=blogs[i].blog_details%></td>
                    <td><%=blogs[i].blog_post_date%></td>
                    <td><%=blogs[i].blog_post_time%></td>
                    <td><%=blogs[i].blog_post_by%></td>
                    <td><%=blogs[i].blog_post_by_position%></td>


                 </tr>
                <%
            }
            %>
        </table>
        </div>
    </div>
</div>


<%-include("footer.ejs")%>