
<%-include("navbar.ejs")%>

<form action="/admin/update_why_choose_points" method="post" enctype="multipart/form-data">
    <div class="container bg-white p-4">
        <div class="row">
            <div class="col-md-12">
                <h3> Update Why Choose Us Points</h3>
                <input type="hidden" name="why_choose_us_points_id" value="<%=points.why_choose_us_points_id%>">

            </div>
            <div class="col-md-8 mb-3">
                image
                <input type="file" name="image" class="form-control">
            </div>
            <div class="col-md-4 mb-3">
                <img src="/uploads/<%=points.image%>" width="100%" height="100px">
            </div>
            <div class="col-md-12 mb-3">
                Name
                <input type="text" value="<%=points.name%>" name="name" class="form-control">
            </div>
            <div class="col-md-12 mb-3">
                Details
                <textarea name="details" class="form-control"><%=points.details%></textarea>
            </div>
            <div class="col-md-12 mb-3 text-center">
                <button class="btn btn-primary">Update Why Choose Points</button>
            </div>
        </div>
    </div>
</form>

<%-include("footer.ejs")%>