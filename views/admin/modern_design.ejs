

<%-include("navbar.ejs")%>

<form action="/admin/save_modern_design" method="post" enctype="multipart/form-data">

    <div class="container bg-white p-4">
        <div class="row">
            <div class="col-md-12">
                <h3>Modern Interior Design</h3>
            </div>
            <div class="col-md-4 mt-3">
                Image1
                <input type="file" name="image1" class="form-control">
            </div>
            <div class="col-md-2 mt-3">
              <img src="/uploads/<%=modern_i_design.image1%>" width="100%" height="100px">
            </div>
            <div class="col-md-4 mt-3">
                Image2
               <input type="file" name="image2" class="form-control">
            </div>
            <div class="col-md-2 mt-3">
                <img src="/uploads/<%=modern_i_design.image2%>" width="100%" height="100px">

            </div>
            <div class="col-md-4 mt-3">
                Image3
                <input type="file" name="image3" class="form-control">
            </div>
            <div class="col-md-2 mt-3">
                <img src="/uploads/<%=modern_i_design.image3%>" width="100%" height="100px">

            </div>
            <div class="col-md-12 mt-3">
                Heading
                <input type="text" name="heading" value="<%=modern_i_design.heading%>" class="form-control">
            </div>
            <div class="col-md-12 mt-3">
                Details
                <textarea name="details" class="form-control"><%=modern_i_design.details%></textarea>
            </div>
            <div class="col-md-6 mt-3">
                Key_point1
                <input type="text" name="key_point1" value="<%=modern_i_design.key_point1%>" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                Key_point2
                <input type="text" name="key_point2" value="<%=modern_i_design.key_point2%>" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                Key_point3
                <input type="text" name="key_point3" value="<%=modern_i_design.key_point3%>" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                Key_point4
                <input type="text" name="key_point4" value="<%=modern_i_design.key_point4%>" class="form-control">
            </div>
            <div class="col-md-12 mt-3 text-center">
                <button class="btn btn-primary">Save Modern Design</button>
            </div>



        </div>
    </div>


</form>



<div class="container-fluid mt-5 bg-white">
    <div class="row">
        <div class="col-md-12 mt-5">
            <h3>Modern Design table</h3>
            <table class="table table-bordered table-sm table-striped mt-4" >
            <tr>
                <th>SN</th>
                <TH>image1</TH>
                <TH>image2</TH>
                <TH>image3</TH>
                <TH>heading</TH>
                <TH>details</TH>
                <TH>key_point1</TH>
                <TH>key_point2</TH>
                <TH>key_point3</TH>
                <TH>key_point4</TH>

            </tr>
            <%
            for(i=0;i<modern_i.length;i++)
            {
                %>
                 <tr>
                    
                    <td><%=i+1%></td>
                   
                  
                    <td><img src="/uploads/<%=modern_i[i].image1%>" width="100%" height="80px" > </td>
                    <td><img src="/uploads/<%=modern_i[i].image2%>" width="100%" height="80px" > </td>
                    <td><img src="/uploads/<%=modern_i[i].image3%>" width="100%" height="80px" > </td>

                    <td><%=modern_i[i].heading%></td>
                    <td><%=modern_i[i].details%></td>
                    <td><%=modern_i[i].key_point1%></td>
                    <td><%=modern_i[i].key_point2%></td>
                    <td><%=modern_i[i].key_point3%></td>
                    <td><%=modern_i[i].key_point4%></td>



                 </tr>
                <%
            }
            %>
        </table>
        </div>
    </div>
</div>


<%-include("footer.ejs")%>