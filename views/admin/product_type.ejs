<%- include ("navbar.ejs") %>

<form action="/admin/save_product_type" method="post">

    <div class="container-fluid p-4 bg-white">
        <div class="row justify-content-center ">
            <div class="col-md-12 text-center">
                <h3>Add Product Type</h3>
            </div>
            <div class="col-md-6 ">
                Enter Type
                <input type="text" name="product_type_name" class="form-control">
            </div>
            <div class="col-md-3 mb-3">
                <br>
              <button class="btn btn-primary">Save Product Type</button>
            </div>
        </div>
    </div>
</form>

<br>
<div class="container-fluid bg-white p-4">
     <div class="row justify-content-center">
        <div class="col-md-8">
            <h3>All Product Types</h3>
        </div>
        <div class="col-md-8">
            <table class="table table-bordered">
                <tr>
                    <th>SrNo.</th>
                    <th>Type</th>
                </tr>
                <% for(i=0;i<types.length;i++)
                {
                     %>
                      <tr>
                        <td><%=i+1%></td>
                        <td><%=types[i].product_type_name%></td>
                      </tr>
                    <%
                } %>
            </table>
        </div>
     </div>
</div>

