
<%-include("navbar.ejs")%>

<form action="/admin/save_team" method="post" enctype="multipart/form-data">
    <div class="container p-4 bg-white">
        <div class="row">
            <div class="col-md-12">
                <h3>Our team</h3>
            </div>
            <div class="col-md-12 mt-3">
                image
                <input type="file" name="image" class="form-control">
            </div>
            <div class="col-md-12 mt-3">
                Name
                <input type="text" name="name" class="form-control">
            </div>
            <div class="col-md-12 mt-3">
                 Position
                <input type="text" name="position" class="form-control">
            </div>
            <div class="col-md-12 mt-3">
                Details
                <textarea name="details" class="form-control"></textarea>
            </div>
            <div class="col-md-12 mt-3 text-center">
               <button class="btn btn-primary">Save our team</button>
            </div>
        </div>
    </div>
</form>


<div class="container-fluid mt-5 bg-white">
    <div class="row">
        <div class="col-md-12 mt-5">
            <h3>Our Team List</h3>
            <table class="table table-bordered table-sm table-striped mt-4">
            <tr>
                <th>ACTION</th>
                <th>SN</th>
                <TH>Image</TH>
                <th>Name</th>
                <th>Position</th>
                <th>Details</th>

            </tr>
            <%
            for(i=0;i<team.length;i++)
            {
                %>
                 <tr>
                    <td>
                        <a href="/admin/edit_our_team/<%=team[i].our_team_id%>">
                            <button class="btn btn-primary p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-pencil"></i>
                            </button>
                        </a>
                        <a href="/admin/delete_our_team/<%=team[i].our_team_id%>" onclick="return confirm('Are You Sure...')">
                            <button class="btn btn-warning p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-trash"></i>
                            </button>
                        </a>
                    </td>
                    <td><%=i+1%></td>
                    <td>
                        <img src="/uploads/<%=team[i].image%>" width="100%" height="80px" >
                       
                        </td>
                    <td><%=team[i].name%></td>
                    <td><%=team[i].position%></td>
                    <td><%=team[i].details%></td>


                 </tr>
                <%
            }
            %>
        </table>
        </div>
    </div>
</div>

<%-include("footer.ejs")%>