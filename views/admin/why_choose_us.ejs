

<%-include("navbar.ejs")%>

<form action="/admin/save_why_choose_us_heading" method="post" enctype="multipart/form-data">
<div class="container bg-white p-4">
    <div class="row">
        <div class="col-md-12">
            <h3>Why Choose Us Heading</h3>
        </div>
        <div class="col-md-12">
         Heading
         <input type="text" name="heading" value="<%=why_choose_us_h.heading%>" class="form-control">
        </div>
        <div class="col-md-6 mt-4">
            Image
            <input type="file" name="image" class="form-control">
        </div>
        <div class="col-md-2 mt-4">
            <img src="/uploads/<%=why_choose_us_h.image%>" width="100%" height="100px">
        </div>
        <div class="col-md-12 text-center mt-3">
            <button class="btn btn-primary">Save Why heading</button>
        </div>
    </div>
</div>
</form>

<div class="container-fluid mt-5 bg-white">
    <div class="row">
        <div class="col-md-12 mt-5">
            <h3>BWhy Choose Heading list</h3>
            <table class="table table-bordered table-sm table-striped mt-4">
            <tr>
                <th>SN</th>
                <TH>heading</TH>
                <th>image</th>
               

            </tr>
            <%
            for(i=0;i<why_choose.length;i++)
            {
                %>
                 <tr>
                    
                    <td><%=i+1%></td>
                   
                  
                    <td><%=why_choose[i].heading%></td>
                    <td>
                        <img src="/uploads/<%=why_choose[i].image%>" width="100%" height="100px" >
                       
                        </td>


                 </tr>
                <%
            }
            %>
        </table>
        </div>
    </div>
</div>
<%-include("footer.ejs")%>