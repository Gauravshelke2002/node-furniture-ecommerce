
<%-include("navbar.ejs")%>

<form action="/admin/update_testimonial" method="post" enctype="multipart/form-data">
    <div class="container p-4 bg-white">
        <div class="row">
            <div class="col-md-12">
                <input type="hidden" name="customer_id" value="<%=customers.customer_id%>">

                <h3> Update Customer Review</h3>
            </div>
            <div class="col-md-8 mt-3">
                Customer Photo
                <input type="file" name="customer_photo" class="form-control">
            </div>
            <div class="col-md-4 mt-3">
                <img src="/uploads/<%=customers.customer_photo%>" width="100%" height="">
            </div>
            <div class="col-md-12 mt-3">
                Customer Name
                <input type="text" value="<%=customers.customer_name%>" name="customer_name" class="form-control">
            </div>
            <div class="col-md-12 mt-3">
                Customer Position
                <input type="text" value="<%=customers.customer_position%>" name="customer_position" class="form-control">
            </div>
            <div class="col-md-12 mt-3">
                Customer Message
                <textarea name="customer_message" class="form-control"><%=customers.customer_message%></textarea>
            </div>
            <div class="col-md-12 mt-3 text-center">
               <button class="btn btn-primary">Update Customer Review</button>
            </div>
        </div>
    </div>
</form>

<%-include("footer.ejs")%>