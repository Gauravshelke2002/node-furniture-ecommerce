
<%-include("navbar.ejs")%>

<form action="/admin/update_blog" method="post" enctype="multipart/form-data">
    <div class="container bg-white p-4">
        <div class="row">
            <div class="col-md-12">
                <input type="hidden" name="blog_id" value="<%=blogs.blog_id%>">

                <h3> Update Blog</h3>
            </div>
            <div class="col-md-8 mt-3">
                Blog Image
                <input type="file" name="blog_image" class="form-control">
            </div>
            <div class="col-md-4">
                <img src="/uploads/<%=blogs.blog_image%>" width="100%" height="100px">
            </div>
            <div class="col-md-12 mt-3">
                Blog Title
                <input type="text" value="<%=blogs.blog_title%>" name="blog_title" class="form-control">
            </div>
            <div class="col-md-12 mt-3">
                Blog Details
                <textarea name="blog_details" class="form-control"><%=blogs.blog_details%></textarea>
            </div>
            <div class="col-md-3 mt-3">
                Blog Post Date
                <input type="date" name="blog_post_date" value="<%=blogs.blog_post_date%>" class="form-control">
            </div>
            <div class="col-md-3 mt-3">
                Blog Post Time
                <input type="time" name="blog_post_time" value="<%=blogs.blog_post_time%>" class="form-control">
            </div>
            <div class="col-md-3 mt-3">
                Blog Post By
                <input type="text" name="blog_post_by"  value="<%=blogs.blog_post_by%>" class="form-control">
            </div>
            <div class="col-md-3 mt-3">
                Blog Post By Position
                <input type="text" name="blog_post_by_position" value="<%=blogs.blog_post_by_position%>" class="form-control">
            </div>
            <div class="col-md-12 mt-3 text-center ">
                <button class="btn btn-primary">Update Blog</button>
            </div>
        </div>
    </div>
</form>

<%-include("footer.ejs")%>