
<%- include("navbar.ejs") %>

<div class="container-fluid p-4 bg-white">
    <div class="row">
       
        <div class="col-md-12">
            <h3>All Product List
                <form action="/admin/product_search" method="get" class="float-end">
                     <input type="text" name="str" class="form-control w-75 d-inline-block">
                     <button class="btn btn-success"><i class="fa fa-search"></i></button>
                </form>
            </h3>
        </div>
        <div class="col-md-12 mt-3">
            <table class="table table-bordered table-sm table-striped">
                <tr>
                    <th>Action</th>
                    <th>SrNo.</th>
                    <th>Product_type_Id</th>
                    <th>Product Name</th>
                    <th>Product Price</th>
                    <th>Product Size</th>
                    <th>Product Color</th>
                </tr>
                <%
                 for(i=0;i<products.length;i++)
                 {
                    %>
                    <tr>
                        <td>
                            <a href="/admin/edit_product/<%=products[i].product_id%>">
                                <button class="btn btn-primary p-0 pe-2 ps-2">
                                    <i class="fa fa-pencil"></i>
                                </button>
                            </a>
                            <a href="/admin/delete_product/<%=products[i].product_id%>" onclick="return confirm('Are You Sure...')">
                                <button class="btn btn-warning p-0 pe-2 ps-2">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </a>
                        </td>
                        <td><%=i+1%></td>
                        <td><%=products[i].product_type_name%></td>
                        <td><%=products[i].product_name%></td>
                        <td>&#8377; <%=products[i].product_price%></td>
                        <td><%=products[i].product_size%></td>
                        <td>
                            <div style= "height: 30px; width: 100%; background-color: <%=products[i].product_color%>;"></div>
                           </td>





                    </tr>
                    <%
                 }
                %>
            </table>
        </div>
    </div>
</div>

<%- include("footer.ejs") %>
