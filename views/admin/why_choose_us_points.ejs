
<%-include("navbar.ejs")%>

<form action="/admin/why_choose_points" method="post" enctype="multipart/form-data">
    <div class="container bg-white p-4">
        <div class="row">
            <div class="col-md-12">
                <h3>Why Choose Us Points</h3>
            </div>
            <div class="col-md-12 mb-3">
                image
                <input type="file" name="image" class="form-control">
            </div>
            <div class="col-md-12 mb-3">
                Name
                <input type="text" name="name" class="form-control">
            </div>
            <div class="col-md-12 mb-3">
                Details
                <textarea name="details" class="form-control"></textarea>
            </div>
            <div class="col-md-12 mb-3 text-center">
                <button class="btn btn-primary">Save Why Choose Points</button>
            </div>
        </div>
    </div>
</form>

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-md-12 mt-5">
            <h3>WHY CHOOSE LIST</h3>
            <table class="table table-bordered table-sm table-striped mt-4">
            <tr>
                <th>ACTION</th>
                <th>SN</th>
                <TH>IMAGE</TH>
                <th>NAME</th>
                <th>DETAILS</th>
            </tr>
            <%
            for(i=0;i<points.length;i++)
            {
                %>
                 <tr>
                    <td>
                        <a href="/admin/edit_why_choose_points/<%=points[i].why_choose_us_points_id%>">
                            <button class="btn btn-primary p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-pencil"></i>
                            </button>
                        </a>
                        <a href="/admin/delete_why_choose_points/<%=points[i].why_choose_us_points_id%>" onclick="return confirm('Are You Sure...')">
                            <button class="btn btn-warning p-0 pe-2 ps-2 mt-3">
                                <i class="fa fa-trash"></i>
                            </button>
                        </a>
                    </td>
                    <td><%=i+1%></td>
                    <td>
                        <img src="/uploads/<%=points[i].image%>" width="100%" height="60px" >
                       
                        </td>
                    <td><%=points[i].name%></td>
                    <td><%=points[i].details%></td>

                 </tr>
                <%
            }
            %>
        </table>
        </div>
    </div>
</div>

<%-include("footer.ejs")%>